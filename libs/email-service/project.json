{
	"name": "email-service",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/email-service/src",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "@nrwl/js:tsc",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/libs/email-service",
				"tsConfig": "libs/email-service/tsconfig.lib.json",
				"packageJson": "libs/email-service/package.json",
				"main": "libs/email-service/src/index.ts",
				"assets": ["libs/email-service/*.md"]
			}
		},
		"lint": {
			"executor": "@nrwl/linter:eslint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["libs/email-service/**/*.ts"]
			}
		},
		"test": {
			"executor": "@nrwl/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "libs/email-service/jest.config.ts",
				"passWithNoTests": true
			},
			"configurations": {
				"ci": {
					"ci": true,
					"codeCoverage": true
				}
			}
		}
	},
	"tags": []
}
